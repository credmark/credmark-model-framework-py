{
    "$query": {
        "$columns": [
            {
                "$*aggregator:enum": {
                    ":table_identifier": "*column_name",
                    "$as": ":column_identifier"
                }
            }
        ],
        "$from": [
            {
                "$table": ":table_name|:query",
                "$as": ":table_identifier"
            }
        ],
        "$on": [
            {
                "$*joiner:enum": {
                    ":table_identifier_0": "*column_name",
                    ":table_identifier_1": "*column_name"
                }
            }
        ],
        "$where": {
            "$*comparator:enum": {
                "$expression_0": ":comparator|:literal",
                "$expression_1": ":comparator|:literal|:query"
            }
        },
        "$group_by": [
            {
                ":table_identifier": "*column_name"
            }
        ],
        "$sort_by": [
            {
                "$*sorter:enum": ":column_identifier"
            }
        ],
        "$top": ":int",
        "$limit": ":int",
        "$offset": ":int"
    },
    "**enums": {
        "$*aggregator": [
            "$min",
            "$max",
            "$count",
            "$avg",
            "$sum",
            "$noop"
        ],
        "$*joiner": [
            "$inner",
            "$outer",
            "$left",
            "$right"
        ],
        "$*comparator": [
            "$eq",
            "$neq",
            "$gt",
            "$lt",
            "$gte",
            "$lte",
            "$in",
            "$regex",
            "$and",
            "$or"
        ],
        "$*sorter": [
            "$ascending",
            "$descending"
        ]
    }
}